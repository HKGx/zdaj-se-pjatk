{
  "rewrites": [
    {
      "source": "/(.+)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' * data:; script-src 'self';"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=604800, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/donate/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=604800, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/favicon.ico",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=604800, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/(.*).png",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "max-age=604800, stale-while-revalidate=86400"
        }
      ]
    }
  ]
}
